<%- include('partials/header'); -%>
<%- include('partials/nav'); -%>
    <body> 
        <div class="container">
                <form action="/auth/user/register" method="POST" class="form-signin">
                        <div class="card mx-auto" style="width: 30rem; margin-bottom: 50px; margin-top: 80px;">
                            <div class="card-body">
                                <h1 class="h3 font-weight-normal" style="text-align:center;">Daftar Sekarang</h1>
                                <div class="checkbox mb-1" style="text-align: center;">
                                    Sudah Punya Akun? <a href="/login">Silahkan Login</a>
                                </div>
                                <div class="form-group mt-4">
                                    <label for="namaLengkap" class="sr-only">Nama Lengkap</label>
                                    <input type="text" name="nama" id="namaLengkap" class="form-control" placeholder="Masukan Nama Lengkap" required autofocus>
                                </div>

                                <div class="form-group">
                                    <label for="inputUsername" class="sr-only">Username</label>
                                    <input type="text" name="username" id="inputUsername" class="form-control" placeholder="Masukan Username (contoh: candra)" required autofocus>
                                </div>
            
                                <div class="form-group">
                                    <label for="typePassword" class="sr-only">Password</label>
                                    <input type="password" name="password" id="typePassword" class="form-control" placeholder="Masukan Password" required>
                                </div>
            
                                <div class="form-group">
                                    <label for="noHp" class="sr-only">No. HP</label>
                                    <input type="number" name="no_hp" id="noHp" class="form-control" placeholder="Masukan Nomor HP" required>
                                </div>
            
                                <div class="form-group">
                                    <label for="jenisKelamin" class="sr-only">Jenis Kelamin</label>
                                    <input type="radio" name="jenis_kelamin" id="lakiLaki" value="pria" required> Laki - Laki
                                    <input type="radio" name="jenis_kelamin" id="Perempuan" value="wanita" required> Perempuan
                                </div>
            
                                <div class="form-group">
                                    <label for="alamatPengguna" class="sr-only">Alamat</label>
                                    <textarea name="alamat" id="alamatPengguna" cols="60" rows="10" placeholder="Masukan Alamat" required></textarea>
                                </div>
            
                                <div class="checkbox mb-3">
                                    <input type="checkbox" name="rememberMe" value="remember-me" required> Saya telah membaca dan menyetujui Aturan Penggunaan dan Kebijakan Privasi<br>
                                </div>
            
                                <div class="form-group">
                                    <button class="btn btn-lg btn-primary btn-block" type="submit">Daftar</button>
                                </div>
            
                            </div>
                        </div>
                    </form>
        </div>
    </body>
<%- include('partials/footer'); -%>