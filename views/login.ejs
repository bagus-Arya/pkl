<%- include('partials/header'); -%>
    <body class="text-center">
        <form action="/auth/user/login" method="POST" class="form-signin">
            <div class="card mx-auto" style="width: 20rem; margin-bottom: 50px; margin-top: 80px;">
                <div class="card-body">
                    <h1 class="h3 mb-3 font-weight-normal">Please Sign In</h1>

                    <div class="form-group">
                        <label for="inputUsername" class="sr-only">Username Anda</label>
                        <input type="username" name="username" id="inputUsername" class="form-control" placeholder="Masukan Username" required autofocus>
                    </div>

                    <div class="form-group">
                        <label for="typePassword" class="sr-only">Password</label>
                        <input type="password" name="password" id="typePassword" class="form-control" placeholder="Masukan Password" required>
                    </div>

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="rememberMe" value="remember-me"> Remember Me <br>
                        Belum Memiliki Akun? <a href="/register">Daftar Disini</a>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
                    </div>
                    <hr>
                    <div class="form-group">
                        <button class="btn btn-lg btn-danger btn-block" type="submit">Sign In With Google</button>
                    </div>
                </div>
            </div>
        </form>
    </body>

<%- include('partials/footer'); -%>